doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content=appDesc)
    meta(property='og:site_name', content=appName)
    meta(name='keywords', content='자전거, 생산, 수입사, 목록, 의류, 헬멧, 고글, 안장, 신발, 라이딩, 코스')
    block head-title

    link(rel='icon', type='image/png', href='/static/favicon/' + appNamel + '.png')

    link(rel='stylesheet', href='/static/bower/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/static/bower/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='/static/css/base.css')

    script(src='/static/bower/jquery/dist/jquery.min.js')
    script(src='/static/bower/bootstrap/dist/js/bootstrap.min.js')
    
    script.
      window.appNamel = '!{appNamel}';
      window.user = !{locals.user ? JSON.stringify({ id: user._id, name: user.name }) : 'undefined'};

    script(src='/static/js/cbase.js')
    script(src='/static/js/cuser.js')
    script(src='/static/js/ccategory.js')
    script(src='/static/js/csupp.js')

    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-86165221-1', 'auto');
      ga('send', 'pageview');
      
  body
    
    block page-header
      .section.page-header
        .page-header-site-name
          a(href='/') #{appName}

    block content

    .section.page-footer
      .about-list
        ul.list-inline
          li: a(href='/about/site') About
          li: a(href='/about/company') Company
          //-li: a(href='/about/ad') Advertise
          //-li: a(href='/about/privacy') Privacy
          li: a(href='/about/suggest') Suggest
          //-li: a(href='/about/help') Help
      if appNamel == 'raysoda'
        .sponsor
          a(href='/api/counters/adng/inc?r=http://www.nationalgeographic.co.kr' target='_blank') National Geographic
      .page-header-site-name
        a(href='/') #{appName}

    #error-modal.modal
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4.modal-title
          .modal-body
          .modal-footer
            button.btn.btn-default(data-dismiss='modal') Close
    
    #fullscreen
